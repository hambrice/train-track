<h2><%= @client.name %>'s Plan </h2>
<p> Created by <%= @plan.trainer.name %></p>
<%@plan.schedules.each do |schedule| %>
  <h3><%=schedule.day%> </h3>
  <%if schedule.rest? == true %>
  <p> Rest day </p>
  <% else %>
  <%schedule.exercises.each do |exercise|%>
    <p><%=exercise.title %>: <%=exercise.sets_reps%></p>
  <% end %>
  <% end %>

<% end %>
<a href='/plans/<%=@client.id%>/edit'> Edit plan </a>
<a href='/plans/<%=@client.id%>/delete'> Delete plan </a>
<p><a href="/trainers/<%=session[:user_id]%>"> Return to main page </a></p>
